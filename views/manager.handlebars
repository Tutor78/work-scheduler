<div class="container-fluid">
    <div class="container-wrapper">
        <div class="container-fluid" id="menu">
            <div class="row">
                <div class="col-md-1">
            
                </div>
                <div class="col menu">
                    <h2> Week Of </h2>
                    <!-- Displays the first Sunday of the week currently selected -->
                    <h2 id="week-of"></h2>
                </div>
                <div class="col menu">
                    <h2> Department </h2>
                    <!-- Use Javascript to display the department selected in the drop down menu -->

                    <h2> N/A </h2>
                </div>
                <div class="col menu">
                    <h2> Hours Available </h2>
                    <!-- Use Javascript to display how many hours this employee is available -->
                    <h2> N/A </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-1">
            <!-- Publishes schedule -->
            <button type="button" class="btn btn-success btn-lg" id="publish-btn">
                Publish
            </button>

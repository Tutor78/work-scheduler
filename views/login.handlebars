<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-12 col-md-8" id="main">
            <div class="row" id="login">
                <div class="col-12 col-lg-6 align-middle text-center">
                    <h1>
                        Work Days
                    </h1>
                    <h2>
                        Login
                    </h2>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="alert alert-danger collapse text-center animate__animated animate__flash" role="alert" id="complete-form-alert">
                      <strong>Please Enter Your Email and Password!</strong> 
                    </div>
                    <div class="alert alert-danger collapse text-center animate__animated animate__flash" role="alert" id="wrong-information-alert">
                        <strong>Wrong Email or Password!</strong> 
                    </div>
                    <form class="login-form text-center">
                        <label for="email" class="email-label col-12">Email:</label>
                        <input type="email" id="email" name="email"><br><br>
                        <label for="password" class="password-label col-12">Password:</label>
                        <input type="password" id="password" name="password"><br><br>
                        <div class="col-12">
                          <button type="submit" class="btn btn-dark my-1">Sign In</button>
                          <button type="button" class="btn btn-dark my-1" data-toggle="modal" data-target="#signUpModal">
                              Create Account
                          </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

<!-- Sign Up Modal -->
<div class="modal fade animate__animated animate__backInDown" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="sign-up-form" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="create-account">Create Account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger collapse text-center animate__animated animate__flash" role="alert" id="complete-signup-alert">
          <strong>Please Fill Out All of the Fields!</strong> 
        </div>
        <form id="signup-form">
            <div class="row">
                <div class="col">
                    <input type="text" class="form-control" id="signup-first-name" placeholder="First name">
                </div>
                <div class="col">
                    <input type="text" class="form-control" id="signup-last-name" placeholder="Last name">
                </div>
            </div>
            <div class="row mt-2 p-3">
                <input type="email" class="form-control" id="signup-email" placeholder="Email">
            </div>
            <div class="row  p-3">
                <input type="password" class="form-control" id="signup-password" placeholder="Password">
            </div>
            <div class="row  p-3">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="job-select">Job Title</label>
                    </div>
                    <select class="custom-select" id="job-select">
                        {{#each jobTitleArr}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                        {{!-- <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option> --}}
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="submit" id="signup-button" class="btn btn-dark">Submit</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/javascript/login.js"></script>
<script src="/javascript/signup.js"></script>

